alias ls='ls -GFh'
alias ll='ls -lAFh'                         # Long ls implementation
alias lls='ls -lAFhS'
alias less='less -FSRXc'                    # Preferred 'less' implementation
cd() { builtin cd "$@"; ls; }               # Always list directory contents upon 'cd'
mcd () { mkdir -p "$1" && cd "$1"; }        # mcd: Makes new Dir and jumps inside
autoload -U zmv
alias mmv='noglob zmv -W'

alias ..='cd ../'                           # Go back 1 directory levels
alias .2='cd ../../'                        # Go back 2 directory levels
alias .3='cd ../../../'                     # Go back 3 directory levels
alias .4='cd ../../../../'                  # Go back 4 directory levels
alias .5='cd ../../../../../'               # Go back 5 directory levels
alias .6='cd ../../../../../../'            # Go back 6 directory levels
alias path='echo -e ${PATH//:/\\n}'         # path: Echo all executable Paths
alias fix_stty='stty sane'                  # fix_stty: Restore terminal settings when screwed up
alias tree_less='ls -R | grep ":$" | sed -e '\''s/:$//'\'' -e '\''s/[^-][^\/]*\//--/g'\'' -e '\''s/^/   /'\'' -e '\''s/-/|/'\'' | less' # This is similar to tree
alias zshconfig="vim ~/.zshrc"
alias sourcezsh="source ~/.zshrc"
alias vimconfig="vim ~/.vimrc"
alias sourcevim="source ~/.vimrc"
alias bex='bundle exec'
alias wwv='cd ~/workspace/www-site; vim .'
alias comv='cd ~/workspace/complaint-app; vim .'
alias coms='cd ~/workspace/complaint-app; bundle exec rails s -p 3001 -b complaint.lvh.uk'
alias wws='cd ~/workspace/www-site; bundle exec rails s -p 3002 -b lvh.uk'
alias flows='cd ~/workspace/flowapp; bundle exec rails s -p 3003 -b lvh.uk'
alias railsc='cd ~/workspace/complaint-app; bundle exec rails c'
alias redis-launch='cd ~/workspace/async-workers; redis-server /usr/local/etc/redis.conf'
alias sidekiq-launch='cd ~/workspace/async-workers; bundle exec sidekiq -C config/sidekiq.yml -r ./lib/workers.rb'
alias start_dynamodb='cd ~/workspace/complaint-app; bin/dynamodb-local'
